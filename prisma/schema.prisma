// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password String
  savedListings Listing[]
  reviews Review[]
  images Image[]
  toDos ToDo[]
}

model Listing {
  addressId Int @id
  placeId String @unique
  blacklisted Boolean
  users User[]
  reviews Review[]
  images Image[]
}

model Review {
  reviewId Int @id
  uId User @relation(fields: [userId], references: [userId])
  userId Int
  aId Listing @relation(fields: [addressId], references: [addressId])
  addressId Int
  sId Season @relation(fields: [seasonId], references: [seasonId])
  seasonId Int
  score Int
}

model Image {
  imageId Int @id
  uId User @relation(fields: [userId], references: [userId])
  userId Int
  aId Listing @relation(fields: [addressId], references: [addressId])
  addressId Int
  sId Season @relation(fields: [seasonId], references: [seasonId])
  seasonId Int
  image Bytes
}

model Season {
  seasonId Int @id @default(autoincrement())
  name String
  start DateTime
  end DateTime
  reviews Review[]
  images Image[]
}

model ToDo {
  id Int @id @default(autoincrement())
  value String
  done Boolean
  uId User @relation(fields: [userId], references: [userId])
  userId Int
}
